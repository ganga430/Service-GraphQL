{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@graphql-codegen/cli": "^2.13.11",
    "@graphql-codegen/typescript-resolvers": "^2.7.6",
    "@swc/core": "^1.3.2",
    "@swc/jest": "^0.2.22",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "ajv": "^8.11.0",
    "eslint": "^8.26.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^10.1.0",
    "graphql": "^15.8.0",
    "husky": "^4.3.8",
    "jest": "^29.0.3",
    "jest-github-actions-reporter": "^1.0.3",
    "jest-html-reporter": "^3.7.0",
    "jest-html-reporters": "^2.1.7",
    "jest-junit": "^12.3.0",
    "lerna": "^5.5.2",
    "plop": "^2.7.6",
    "prettier": "^2.7.1",
    "serverless": "^3.22.0",
    "serverless-offline": "^8.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "generate-schema-types": "graphql-codegen",
    "plop": "plop",
    "compile": "tsc --build tsconfig.build.json",
    "compile-clean": "tsc --build tsconfig.build.json --clean",
    "clean-modules": "rm -rf packages/*/node_modules && rm -rf services/*/node_modules && rm -rf node_modules",
    "clean-package-locks": "rm -rf packages/*/package-lock.json && rm -rf services/*/package-lock.json && rm -rf package-lock.json",
    "clean-dist": "lerna run clean-dist",
    "watch": "tsc --build tsconfig.build.json --watch",
    "build-config": "cd scripts && npm i && npm run writeLocalConfigs",
    "postinstall": "lerna bootstrap && npx plop buildServices dev && npm run build-config dev && npm run compile-clean && npm run compile",
    "start-services": "serverless offline",
    "start-gateway-no-sleep": "node services/gateway/dist/index",
    "start-gateway": "cd services/gateway && npm start",
    "debug-services": "node --inspect node_modules/serverless/bin/serverless.js offline",
    "debug-gateway": "cd services/gateway && node --inspect=9228 dist/index.js",
    "lint": "eslint . --ext .js,.ts",
    "lint-fix": "eslint . --fix --ext .js,.ts",
    "lerna-bootstrap": "lerna bootstrap",
    "test-clear": "jest --clearCache",
    "test": "jest --reporters=default --coverage --silent",
    "test:watch": "npm test -- --watch",
    "ci:test": "jest --silent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MGMResorts/services-gql.git"
  }
}
